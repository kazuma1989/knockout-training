{{#> ../layout title='Search'}}

  <h1 class="page-header">Search</h1>

  <form class="form-horizontal" data-bind="submit: search">
    <div class="form-group">
      <div class="col-sm-8" data-bind="css: { 'has-error': !id.pristine() && !id.valid() }">
        <div class="row">
          <label class="col-sm-2 control-label">
            ID
          </label>
          <div class="col-sm-10">
            <input tabindex="1" type="text" class="form-control" data-bind="textInput: id, attr: { title: (id.error().required || '') + (id.error().length || '') }">
          </div>
        </div>
      </div>
    </div>

    <div class="form-group" data-bind="with: profile">
      <div class="col-sm-4" data-bind="css: { 'has-error': !name.pristine() && !name.valid() }">
        <div class="row">
          <label class="col-sm-4 control-label">
            Name
          </label>
          <div class="col-sm-8">
            <input tabindex="2" type="text" class="form-control" data-bind="textInput: name, attr: { title: name.error().required || '' }">
          </div>
        </div>
      </div>

      <div class="col-sm-4" data-bind="css: { 'has-error': !email.pristine() && !email.valid() }">
        <div class="row">
          <label class="col-sm-4 control-label">
            Email
          </label>
          <div class="col-sm-8">
            <input tabindex="3" type="email" class="form-control" data-bind="textInput: email, attr: { title: email.error().required || '' }">
          </div>
        </div>
      </div>

      <div class="col-sm-4" data-bind="css: { 'has-error': !gender.pristine() && !gender.valid() }">
        <div class="row">
          <label class="col-sm-4 control-label">
            Gender
          </label>
          <div class="col-sm-8">
            <input tabindex="3" type="text" class="form-control" data-bind="textInput: gender, attr: { title: gender.error().unknown || '' }">
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 col-sm-offset-10">
        <button tabindex="4" type="submit" class="btn btn-primary" data-bind="enable: id.valid() || profile.valid()">Search</button>
      </div>
    </div>
  </form>

  <div>
    <div>
      Errors:
    </div>
    <div>
      ID <span data-bind="json: id.error"></span>
    </div>
    <div>
      Name <span data-bind="json: profile().name.error"></span>
    </div>
    <div>
      Email <span data-bind="json: profile().email.error"></span>
    </div>
    <div>
      Gender <span data-bind="json: profile().gender.error"></span>
    </div>
    <div>
      Profile <span data-bind="json: profile.error"></span>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table" data-bind="if: customers">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>

      <tbody data-bind="foreach: customers">
        <tr>
          <td data-bind="text: name"></td>
          <td data-bind="text: id"></td>
        </tr>
      </tbody>
    </table>

  </div>

  {{/../layout}}
