{{#> ../layout title='Search'}}

  <h1 class="page-header">Search</h1>

  <form class="form-horizontal" data-bind="submit: search">
    <div class="row form-group">
      <div class="col-sm-4" data-bind="css: { 'has-error': !id.pristine() && !id.valid() }">
        <label class="col-sm-3 control-label">ID</label>
        <div class="col-sm-9">
          <input tabindex="1" class="form-control" data-bind="textInput: id, attr: { title: id.errorMessage }">
        </div>
      </div>
    </div>

    <div class="row form-group" data-bind="with: profile">
      <div class="col-sm-4" data-bind="css: { 'has-error': !name.pristine() && !name.valid() }">
        <label class="col-sm-3 control-label">Name</label>
        <div class="col-sm-9">
          <input tabindex="2" class="form-control" data-bind="textInput: name, attr: { title: name.errorMessage }">
        </div>
      </div>

      <div class="col-sm-4" data-bind="css: { 'has-error': !email.pristine() && !email.valid() }">
        <label class="col-sm-3 control-label">Email</label>
        <div class="col-sm-9">
          <input tabindex="3" class="form-control" data-bind="textInput: email, attr: { title: email.errorMessage }">
        </div>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-2 col-sm-offset-10">
        <button tabindex="4" type="submit" class="btn btn-primary" data-bind="enable: id.valid() || profile.valid()">Search</button>
      </div>
    </div>
  </form>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>

    <tbody data-bind="foreach: customers">
      <tr>
        <td data-bind="text: name"></td>
        <td data-bind="text: id"></td>
      </tr>
    </tbody>
  </table>

  {{/../layout}}
